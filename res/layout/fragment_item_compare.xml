<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd" >
    
        <!-- 顶部标题栏 -->

    <fragment
        android:id="@+id/title_statistic_type"
        android:name="cn.hjf.gollumaccount.fragment.CommonHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    
    
    <!-- 日期 -->

            <LinearLayout
                android:id="@+id/llyt_query_date_start"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/title_statistic_type"
                android:layout_marginTop="1dp"
                android:background="#f0f0f0" >

                <TextView
                    android:id="@+id/tv_record_date_start_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="开 始："
                    android:textColor="#323232"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_record_date_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:padding="10dp"
                    android:hint="选择开始日期"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 时间 -->

            <LinearLayout
                android:id="@+id/llyt_query_date_end"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/llyt_query_date_start"
                android:layout_marginTop="1dp"
                android:background="#f0f0f0" >

                <TextView
                    android:id="@+id/tv_record_time_end_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="结 束："
                    android:textColor="#323232"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_record_time_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:padding="10dp"
                    android:hint="选择结束日期"
                    android:textSize="16sp" />
            </LinearLayout>

