<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#0099CC"
    android:id="@+id/fragment_common_header_parent" >

    <!-- 标题 -->

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="#e5e6e1"
        android:textSize="18sp" />

    <!-- 返回操作 -->

    <LinearLayout
        android:id="@+id/left_linearlayout"
        android:layout_width="wrap_content"
        android:minWidth="40dp"
        android:layout_height="48dp"
        android:orientation="horizontal" 
        android:gravity="center_vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:paddingLeft="11dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/left_image"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/title_back_btn" />

        <TextView
            android:id="@+id/left_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="返回"
            android:textColor="#e5e6e1"
            android:textSize="18sp" />
    </LinearLayout>

    
    
    <ImageView
        android:layout_marginRight="18dp"
        android:id="@+id/right_image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
    <!-- 可选操作 -->
    <TextView
        android:id="@+id/tv_operate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
		android:layout_toLeftOf="@id/right_image"
        android:layout_centerVertical="true"
        android:textColor="#e5e6e1"
        android:visibility="gone"
        android:textSize="18sp" />
</RelativeLayout>