<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >

    <ImageView
        android:id="@+id/iv_consume_icon"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:src="@drawable/unknown" 
        android:background="#C8C8C8"/>

    <LinearLayout
        android:id="@+id/llyt_price_date"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_consume_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_consume_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_consume_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            
            android:text="TextView"
            android:textColor="#969696"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lllyt_name_info"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/llyt_price_date"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_consume_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_consume_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#969696"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>