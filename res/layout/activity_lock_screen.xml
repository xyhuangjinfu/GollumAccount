<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
        <!-- 顶部标题栏 -->

    <fragment
        android:id="@+id/title_lock_screen"
        android:name="cn.hjf.gollumaccount.fragment.CommonHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <cn.hjf.gollumaccount.view.LockView
        android:id="@+id/v_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_lock_screen"
         />
    
    <TextView 
        android:id="@+id/tv_forget_pwd"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/textsize_indicator"
        android:textColor="@color/color_click_text"
        android:text="@string/label_forget_pwd"
        android:visibility="gone"
        />
    
</RelativeLayout>
