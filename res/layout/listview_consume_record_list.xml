<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_abslistview_item" >

    <!-- 消费类型图标 -->

    <ImageView
        android:id="@+id/iv_consume_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_round_gray"
        android:padding="9dp" />

    <!-- 消费名称 -->

    <TextView
        android:id="@+id/tv_consume_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/tv_consume_price"
        android:layout_toRightOf="@id/iv_consume_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_content" />

    <!-- 消费日期 -->

    <TextView
        android:id="@+id/tv_consume_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_toLeftOf="@id/tv_consume_price"
        android:layout_toRightOf="@id/iv_consume_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/gray_deep"
        android:textSize="@dimen/textsize_content" />

    <!-- 消费金额 -->

    <TextView
        android:id="@id/tv_consume_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/theme"
        android:textSize="@dimen/textsize_price_small" />
    
        <!-- 删除 -->

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-80dp"
        android:gravity="center"
        android:padding="15dp"
        android:singleLine="true"
        android:background="@drawable/bg_button"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_content" />

</RelativeLayout>