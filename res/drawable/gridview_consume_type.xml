<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
   <!--点击时的颜色-->
   <item android:state_pressed="true" android:drawable="@color/theme_translucent"/>
   <!--选中时的颜色-->
   <item android:state_selected="true" android:drawable="@color/theme_translucent"/>
   <!--获得焦点时的颜色-->
   <item android:state_focused="true" android:drawable="@color/theme_translucent"/>
   
   <item android:state_checked="true" android:drawable="@color/theme_translucent"/>
   <!-- 默认颜色 -->
   <item android:drawable="@color/white"/>
</selector>
